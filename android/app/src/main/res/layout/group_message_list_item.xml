<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="3dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="68dp"
        app:cardBackgroundColor="#80cccccc"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:contentPaddingBottom="4dp"
        app:contentPaddingLeft="8dp"
        app:contentPaddingRight="8dp"
        app:contentPaddingTop="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tvUser"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:maxWidth="296dp"
            android:text="John Hancock"
            android:textColor="@color/messages"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivProfilePic"
            android:layout_width="53dp"
            android:layout_height="66dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/cvMessage"
            android:layout_marginEnd="140dp"
            app:srcCompat="@drawable/placeholder_person" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cvMessage"
            android:layout_alignTop="@+id/cvMessage"
            android:layout_marginStart="65dp"
            android:layout_marginTop="30dp"
            android:maxWidth="296dp"
            android:minHeight="68dp"
            android:text="Hello, how are you?"
            android:textColor="@color/messages"
            android:textSize="16sp" />

    </android.support.v7.widget.CardView>

</RelativeLayout>
